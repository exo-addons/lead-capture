<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">


    <portlet>
        <portlet-name>leadsManagement</portlet-name>
        <display-name xml:lang="EN">Lead Management Portlet</display-name>
        <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
        <init-param>
            <name>portlet-view-dispatched-file-path</name>
            <value>/leadsManagement.html</value>
        </init-param>
        <expiration-cache>-1</expiration-cache>
        <cache-scope>PUBLIC</cache-scope>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>Leads management</title>
            <keywords>lead-capture</keywords>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>mailTemplatesManagement</portlet-name>
        <display-name xml:lang="EN">Mail Templates Management Portlet</display-name>
        <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
        <init-param>
            <name>portlet-view-dispatched-file-path</name>
            <value>/mailTemplatesManagement.html</value>
        </init-param>
        <expiration-cache>-1</expiration-cache>
        <cache-scope>PUBLIC</cache-scope>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>Mail templates management</title>
            <keywords>lead-capture</keywords>
        </portlet-info>
    </portlet>

</portlet-app>